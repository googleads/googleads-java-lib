<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>com.google.api-ads</groupId>
    <artifactId>client-libs-parent</artifactId>
    <version>2.13.1-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.google.api-ads</groupId>
  <artifactId>ddp-axis</artifactId>
  <version>2.13.1-SNAPSHOT</version>

  <packaging>jar</packaging>
  <name>DDP Axis classes</name>
  <description>
    Contains the autogenerated classes to use the DDP API with Apache Axis.
    Also contains the dependencies on the common library.
  </description>

  <build>
    <plugins>
      <!--
      Configure the surefire-plugin used for the 'test' phase to execute each
      test case in its own JVM. This prevents failures in tests that rely on
      different configuration settings that impact singletons, such as the SOAP
      compression integration tests.
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.17</version>
        <configuration>
          <reuseForks>false</reuseForks>
          <forkCount>1</forkCount>
        </configuration>
      </plugin>
    </plugins>
    <resources>
      <resource>
        <targetPath>com/google/api/ads/ddp/axis/conf/props</targetPath>
        <filtering>false</filtering>
        <directory>src/main/java/com/google/api/ads/ddp/axis/conf/props</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
     </resources>
     <testResources>
       <testResource>
         <targetPath>com/google/api/ads/ddp/axis/testing</targetPath>
         <filtering>false</filtering>
         <directory>src/test/java/com/google/api/ads/ddp/axis/testing</directory>
         <includes>
           <include>*.xml</include>
         </includes>
       </testResource>
      <testResource>
        <targetPath>com/google/api/ads/ddp/axis/props</targetPath>
        <filtering>false</filtering>
        <directory>src/test/java/com/google/api/ads/ddp/axis/props</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </testResource>
     </testResources>
  </build>

  <dependencies>
    <!-- Ads client library dependencies -->
    <dependency>
      <groupId>com.google.api-ads</groupId>
      <artifactId>ads-lib</artifactId>
      <version>2.13.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.google.api-ads</groupId>
      <artifactId>ads-lib-axis</artifactId>
      <version>2.13.1-SNAPSHOT</version>
    </dependency>

    <!-- Third party dependencies -->

    <!-- Testing dependencies -->
    <dependency>
      <groupId>com.google.api-ads</groupId>
      <artifactId>ads-lib</artifactId>
      <scope>test</scope>
      <classifier>tests</classifier>
      <version>2.13.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.google.http-client</groupId>
      <artifactId>google-http-client-jackson2</artifactId>
      <version>1.21.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.seleniumhq.selenium</groupId>
      <artifactId>selenium-java</artifactId>
      <version>2.53.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>jetty</groupId>
      <artifactId>jetty</artifactId>
      <version>5.1.10</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.9.5</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>xmlunit</groupId>
      <artifactId>xmlunit</artifactId>
      <version>1.6</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
